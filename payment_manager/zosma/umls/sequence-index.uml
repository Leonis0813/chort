autonumber

actor 利用者

create ApplicationController
利用者 -> ApplicationController : new

autonumber resume
create InputChecker
ApplicationController -> InputChecker : new
create HTTPClient
ApplicationController -> HTTPClient : new
create ViewController
ApplicationController -> ViewController : new

create SearchForm
ViewController -> SearchForm : new

create CategoryForm
SearchForm -> CategoryForm : new

create PaymentTable
ViewController -> PaymentTable : new

create MessageField
ViewController -> MessageField : new

alt カテゴリ選択ボタンを押下
  利用者 -> CategoryForm : actionPerformed
  CategoryForm -> ApplicationController : getCategories

  ApplicationController -> HTTPClient : getCategories

  autonumber stop
  HTTPClient --> ApplicationController

  autonumber stop
  ApplicationController --> CategoryForm

  autonumber resume
  create CategoryDialog
  CategoryForm -> CategoryDialog : new

  利用者 -> CategoryDialog : actionPerformed
  CategoryDialog -> CategoryForm : setCategory

  autonumber stop
  CategoryForm --> CategoryDialog
  destroy CategoryDialog
end

