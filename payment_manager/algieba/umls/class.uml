class Payment_View <<Boundary>>
class Statistics_View <<Boundary>>

class PaymentsController {
  + index(query_parameters : Hash) : void
  - index_params() : Array
}

class Api::PaymentsController {
  + create(request_parameters : Hash) : void
  + show(id : String) : void
  + index(query_parameters : Hash) : void
  + update(id : String, request_parameters : Hash) : void
  + destroy(id : String) : void
  + settle(interval : String) : void
  - payment_params() : Array
  - index_params() : Array
}

class Api::CategoriesController {
  + index(keyword: String)
}

class StatisticsController {
}

class Payment {
  + payment_type : String
  + date : Date
  + content : String
  + category : Category
  + price : Fixnum
  + settle(interval : String) : Hash<String, Fixnum>
}

class Query {
  - payment_type : String
  - date_before : String
  - date_after : String
  - content_equal : String
  - content_include : String
  - category : String
  - price_upper : int
  - price_lower : int
  - page : int
  - per_page : int
  + date_valid?() : void
}

class Settlement {
  - interval : String
}

class Category {
  + name: String
  + description: String
}

Payment_View -right- PaymentsController
Payment_View -right- Api::PaymentsController
PaymentsController "1" -- "0..*" Payment
PaymentsController -- Query
Api::PaymentsController "1" -- "0..*" Payment
Api::PaymentsController -- Query
Api::PaymentsController -- Settlement
Api::CategoriesController "1" -- "0..*" Category
Payment "1..*" -- "1..*" Category
Statistics_View -right- StatisticsController
Statistics_View -right- Api::PaymentsController
